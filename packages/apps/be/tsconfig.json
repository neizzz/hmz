{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@constants": ["./src/constants.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
