{
  "name": "@hmz/root",
  "private": true,
  "workspaces": [
    "packages/apps/*",
    "packages/shared/*"
  ],
  "scripts": {
    "generate-schema-ts": "schema-codegen packages/apps/be/src/rooms/schema/* --ts --output packages/apps/fe/schema/",
    "start:be": "cross-env PORT=3030 lerna run start --scope @app/be",
    "start:fe": " lerna run start --scope @app/fe",
    "start": "cross-env PORT=3333 FE_PORT=8080 lerna run start",
    "build": "lerna run build"
  },
  "devDependencies": {
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/node": "^20.11.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "lerna": "^8.0.2",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "lodash.clonedeep": "^4.5.0"
  }
}
